<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#f7eb00"
                android:endColor="#ebf700"
                android:angle="90">
            </gradient>
            <stroke android:width="1dp"
                android:color="#c2c1bf">
            </stroke>
            <corners android:radius="10dp"/>
            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#f1e7bb"
                android:endColor="#f2d96c"
                android:angle="90">
            </gradient>
            <stroke android:width="1dp"
                android:color="#c2c1bf">
            </stroke>
            <corners android:radius="10dp"/>
            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>